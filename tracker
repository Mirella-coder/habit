    <script>
        // Configuration
        const STORAGE_KEY = 'purpleHabitTracker';
        const WEEKS_TO_SHOW = 52;
        
        // Data management
        let habitData = loadData();

        function loadData() {
            const stored = localStorage.getItem(STORAGE_KEY);
            return stored ? JSON.parse(stored) : {};
        }

        function saveData() {
            localStorage.setItem(STORAGE_KEY, JSON.stringify(habitData));
            updateStats();
            renderHeatmap();
        }

        function getDateString(date) {
            return date.toISOString().split('T')[0];
        }

        function getLevel(count) {
            if (count === 0) return 0;
            if (count <= 1) return 1;
            if (count <= 3) return 2;
            if (count <= 5) return 3;
            return 4;
        }

        function calculateStreaks() {
            const dates = Object.keys(habitData)
                .filter(date => habitData[date] > 0)
                .sort();

            if (dates.length === 0) return { current: 0, longest: 0, total: 0 };

            let currentStreak = 0;
            let longestStreak = 0;
            let tempStreak = 0;
            let lastDate = null;
            const today = new Date();
            today.setHours(0, 0, 0, 0);

            const todayStr = getDateString(today);
            const yesterday = new Date(today);
            yesterday.setDate(yesterday.getDate() - 1);
            const yesterdayStr = getDateString(yesterday);

            dates.forEach(dateStr => {
                const date = new Date(dateStr);
                
                if (lastDate === null) {
                    tempStreak = 1;
                } else {
                    const dayDiff = Math.floor((date - lastDate) / (1000 * 60 * 60 * 24));
                    if (dayDiff === 1) {
                        tempStreak++;
                    } else {
                        longestStreak = Math.max(longestStreak, tempStreak);
                        tempStreak = 1;
                    }
                }
                
                lastDate = date;
            });

            longestStreak = Math.max(longestStreak, tempStreak);

            // Calculate current streak
            if (habitData[todayStr] > 0 || habitData[yesterdayStr] > 0) {
                let checkDate = habitData[todayStr] > 0 ? today : yesterday;
                currentStreak = 0;
                
                while (true) {
                    const dateStr = getDateString(checkDate);
                    if (habitData[dateStr] > 0) {
                        currentStreak++;
                        checkDate = new Date(checkDate);
                        checkDate.setDate(checkDate.getDate() - 1);
                    } else {
                        break;
                    }
                }
            }

            const total = dates.length;

            return { current: currentStreak, longest: longestStreak, total };
        }

        function updateStats() {
            const stats = calculateStreaks();
            
            // Animate number changes
            const animateValue = (element, start, end, duration) => {
                const range = end - start;
                const startTime = performance.now();
                
                const animate = (currentTime) => {
                    const elapsed = currentTime - startTime;
                    const progress = Math.min(elapsed / duration, 1);
                    
                    // Easing function
                    const easeOutQuart = 1 - Math.pow(1 - progress, 4);
                    const value = Math.floor(start + range * easeOutQuart);
                    
                    element.textContent = value;
                    
                    if (progress < 1) {
                        requestAnimationFrame(animate);
                    }
                };
                
                requestAnimationFrame(animate);
            };
            
            const currentEl = document.getElementById('current-streak');
            const longestEl = document.getElementById('longest-streak');
            const totalEl = document.getElementById('total-days');
            
            animateValue(currentEl, parseInt(currentEl.textContent) || 0, stats.current, 500);
            animateValue(longestEl, parseInt(longestEl.textContent) || 0, stats.longest, 500);
            animateValue(totalEl, parseInt(totalEl.textContent) || 0, stats.total, 500);
        }

        function renderHeatmap() {
            const heatmapContainer = document.getElementById('heatmap');
            const monthLabelsContainer = document.getElementById('month-labels');
            heatmapContainer.innerHTML = '';
            monthLabelsContainer.innerHTML = '';

            const today = new Date();
            const endDate = new Date(today);
            endDate.setDate(endDate.getDate() + (6 - endDate.getDay()));

            const startDate = new Date(endDate);
            startDate.setDate(startDate.getDate() - (WEEKS_TO_SHOW * 7) + 1);

            let currentMonth = -1;
            let monthStartPositions = [];
            
            for (let week = 0; week < WEEKS_TO_SHOW; week++) {
                const weekColumn = document.createElement('div');
                weekColumn.className = 'week-column';

                for (let day = 0; day < 7; day++) {
                    const currentDate = new Date(startDate);
                    currentDate.setDate(startDate.getDate() + (week * 7) + day);

                    if (currentDate.getMonth() !== currentMonth) {
                        currentMonth = currentDate.getMonth();
                        monthStartPositions.push({
                            week,
                            month: currentDate.toLocaleDateString('en-US', { month: 'short' })
                        });
                    }

                    const dayCell = document.createElement('div');
                    
                    if (currentDate > today) {
                        dayCell.className = 'day-cell empty';
                    } else {
                        const dateStr = getDateString(currentDate);
                        const count = habitData[dateStr] || 0;
                        dayCell.className = `day-cell level-${getLevel(count)}`;
                        dayCell.dataset.date = dateStr;

                        const tooltip = document.createElement('div');
                        tooltip.className = 'tooltip';
                        const formattedDate = currentDate.toLocaleDateString('en-US', { 
                            month: 'short', 
                            day: 'numeric', 
                            year: 'numeric' 
                        });
                        
                        if (count === 0) {
                            tooltip.textContent = `No activity on ${formattedDate}`;
                        } else {
                            tooltip.textContent = `${count} contribution${count !== 1 ? 's' : ''} on ${formattedDate}`;
                        }
                        dayCell.appendChild(tooltip);

                        dayCell.addEventListener('click', function() {
                            toggleDay(dateStr);
                        });
                    }

                    weekColumn.appendChild(dayCell);
                }

                heatmapContainer.appendChild(weekColumn);
            }

            monthStartPositions.forEach((pos, index) => {
                const label = document.createElement('div');
                label.className = 'month-label';
                label.textContent = pos.month;
                
                const nextPos = monthStartPositions[index + 1];
                const weeks = nextPos ? nextPos.week - pos.week : WEEKS_TO_SHOW - pos.week;
                label.style.width = `${weeks * 15}px`;
                
                monthLabelsContainer.appendChild(label);
            });
        }

        function toggleDay(dateStr) {
            habitData[dateStr] = (habitData[dateStr] || 0) + 1;
            if (habitData[dateStr] > 8) {
                habitData[dateStr] = 0;
            }
            
            // Add pulse animation to the clicked cell
            const cells = document.querySelectorAll('.day-cell');
            cells.forEach(cell => {
                if (cell.dataset.date === dateStr) {
                    cell.style.animation = 'pulse 0.6s ease';
                    setTimeout(() => {
                        cell.style.animation = '';
                    }, 600);
                }
            });
            
            saveData();
        }

        function markToday() {
            const today = getDateString(new Date());
            habitData[today] = (habitData[today] || 0) + 1;
            saveData();
        }

        function clearAllData() {
            if (confirm('Are you sure you want to clear all data? This cannot be undone.')) {
                habitData = {};
                saveData();
            }
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            updateStats();
            renderHeatmap();
            
            // Add event listeners to buttons
            document.getElementById('mark-today').addEventListener('click', markToday);
            document.getElementById('clear-all').addEventListener('click', clearAllData);
        });
    </script>
</body>
</html>
