<body>
    <div class="tracker-container">
        <div class="tracker-header">
            <h1 class="tracker-title">
                <span class="flame-icon">ðŸ”¥</span>
                My Habit Tracker
            </h1>
        </div>

        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-number" id="current-streak">0</div>
                <div class="stat-label">days</div>
                <div class="stat-label">Current</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="longest-streak">0</div>
                <div class="stat-label">days</div>
                <div class="stat-label">Longest</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="total-days">0</div>
                <div class="stat-label">days</div>
                <div class="stat-label">Total</div>
            </div>
        </div>

        <div class="heatmap-container">
            <div class="heatmap-wrapper">
                <div class="month-labels" id="month-labels"></div>
                <div class="heatmap-content">
                    <div class="weekday-labels">
                        <div class="weekday-label"></div>
                        <div class="weekday-label">Mon</div>
                        <div class="weekday-label"></div>
                        <div class="weekday-label">Wed</div>
                        <div class="weekday-label"></div>
                        <div class="weekday-label">Fri</div>
                        <div class="weekday-label"></div>
                    </div>
                    <div class="weeks-container" id="heatmap"></div>
                </div>
            </div>
            <div class="legend">
                <span>Less</span>
                <div class="legend-item level-0"></div>
                <div class="legend-item level-1"></div>
                <div class="legend-item level-2"></div>
                <div class="legend-item level-3"></div>
                <div class="legend-item level-4"></div>
                <span>More</span>
            </div>
        </div>

        <div class="controls">
            <button class="btn btn-primary" onclick="markToday()">Mark Today Complete</button>
            <button class="btn btn-secondary" onclick="clearData()">Clear All Data</button>
            <button class="btn btn-secondary" onclick="exportData()">Export Data</button>
            <button class="btn btn-secondary" onclick="document.getElementById('import-input').click()">Import Data</button>
            <input type="file" id="import-input" style="display: none;" accept=".json" onchange="importData(event)">
        </div>
    </div>

    <script>
        // Configuration
        const STORAGE_KEY = 'habitTrackerData';
        const WEEKS_TO_SHOW = 52;
        
        // Data management
        let habitData = loadData();

        function loadData() {
            const stored = localStorage.getItem(STORAGE_KEY);
            return stored ? JSON.parse(stored) : {};
        }

        function saveData() {
            localStorage.setItem(STORAGE_KEY, JSON.stringify(habitData));
            updateStats();
            renderHeatmap();
        }

        function getDateString(date) {
            return date.toISOString().split('T')[0];
        }

        function getLevel(count) {
            if (count === 0) return 0;
            if (count <= 2) return 1;
            if (count <= 4) return 2;
            if (count <= 6) return 3;
            return 4;
        }

        function calculateStreaks() {
            const dates = Object.keys(habitData)
                .filter(date => habitData[date] > 0)
                .sort();

            if (dates.length === 0) return { current: 0, longest: 0, total: 0 };

            let currentStreak = 0;
            let longestStreak = 0;
            let tempStreak = 0;
            let lastDate = null;
            const today = new Date();
            today.setHours(0, 0, 0, 0);

            // Check if today or yesterday was completed for current streak
            const todayStr = getDateString(today);
            const yesterday = new Date(today);
            yesterday.setDate(yesterday.getDate() - 1);
            const yesterdayStr = getDateString(yesterday);

            dates.forEach(dateStr => {
                const date = new Date(dateStr);
                
                if (lastDate === null) {
                    tempStreak = 1;
                } else {
                    const dayDiff = Math.floor((date - lastDate) / (1000 * 60 * 60 * 24));
                    if (dayDiff === 1) {
                        tempStreak++;
                    } else {
                        longestStreak = Math.max(longestStreak, tempStreak);
                        tempStreak = 1;
                    }
                }
                
                lastDate = date;
            });

            longestStreak = Math.max(longestStreak, tempStreak);

            // Calculate current streak
            if (habitData[todayStr] > 0 || habitData[yesterdayStr] > 0) {
                currentStreak = tempStreak;
                // Count backwards from today/yesterday to find the start of current streak
                let checkDate = habitData[todayStr] > 0 ? today : yesterday;
                currentStreak = 0;
                
                while (true) {
                    const dateStr = getDateString(checkDate);
                    if (habitData[dateStr] > 0) {
                        currentStreak++;
                        checkDate = new Date(checkDate);
                        checkDate.setDate(checkDate.getDate() - 1);
                    } else {
                        break;
                    }
                }
            }

            const total = dates.length;

            return { current: currentStreak, longest: longestStreak, total };
        }

        function updateStats() {
            const stats = calculateStreaks();
            document.getElementById('current-streak').textContent = stats.current;
            document.getElementById('longest-streak').textContent = stats.longest;
            document.getElementById('total-days').textContent = stats.total;
        }

        function renderHeatmap() {
            const heatmapContainer = document.getElementById('heatmap');
            const monthLabelsContainer = document.getElementById('month-labels');
            heatmapContainer.innerHTML = '';
            monthLabelsContainer.innerHTML = '';

            const today = new Date();
            const endDate = new Date(today);
            endDate.setDate(endDate.getDate() + (6 - endDate.getDay())); // End on Saturday

            const startDate = new Date(endDate);
            startDate.setDate(startDate.getDate() - (WEEKS_TO_SHOW * 7) + 1);

            // Generate month labels
            let currentMonth = -1;
            let monthStartPositions = [];
            
            // Create weeks
            for (let week = 0; week < WEEKS_TO_SHOW; week++) {
                const weekColumn = document.createElement('div');
                weekColumn.className = 'week-column';

                for (let day = 0; day < 7; day++) {
                    const currentDate = new Date(startDate);
                    currentDate.setDate(startDate.getDate() + (week * 7) + day);

                    // Track month changes
                    if (currentDate.getMonth() !== currentMonth) {
                        currentMonth = currentDate.getMonth();
                        monthStartPositions.push({
                            week,
                            month: currentDate.toLocaleDateString('en-US', { month: 'short' })
                        });
                    }

                    const dayCell = document.createElement('div');
                    
                    if (currentDate > today) {
                        dayCell.className = 'day-cell empty';
                    } else {
                        const dateStr = getDateString(currentDate);
                        const count = habitData[dateStr] || 0;
                        dayCell.className = `day-cell level-${getLevel(count)}`;
                        dayCell.dataset.date = dateStr;

                        // Add tooltip
                        const tooltip = document.createElement('div');
                        tooltip.className = 'tooltip';
                        const formattedDate = currentDate.toLocaleDateString('en-US', { 
                            month: 'short', 
                            day: 'numeric', 
                            year: 'numeric' 
                        });
                        tooltip.textContent = `${count} contribution${count !== 1 ? 's' : ''} on ${formattedDate}`;
                        dayCell.appendChild(tooltip);

                        // Click handler
                        dayCell.addEventListener('click', function() {
                            toggleDay(dateStr);
                        });
                    }

                    weekColumn.appendChild(dayCell);
                }

                heatmapContainer.appendChild(weekColumn);
            }

            // Create month labels
            monthStartPositions.forEach((pos, index) => {
                const label = document.createElement('div');
                label.className = 'month-label';
                label.textContent = pos.month;
                
                // Calculate width based on weeks until next month
                const nextPos = monthStartPositions[index + 1];
                const weeks = nextPos ? nextPos.week - pos.week : WEEKS_TO_SHOW - pos.week;
                label.style.width = `${weeks * 13}px`; // 11px cell + 2px gap
                
                monthLabelsContainer.appendChild(label);
            });
        }

        function toggleDay(dateStr) {
            habitData[dateStr] = (habitData[dateStr] || 0) + 1;
            if (habitData[dateStr] > 8) {
                habitData[dateStr] = 0;
            }
            saveData();
        }

        function markToday() {
            const today = getDateString(new Date());
            habitData[today] = (habitData[today] || 0) + 1;
            saveData();
        }

        function clearData() {
            if (confirm('Are you sure you want to clear all data? This cannot be undone.')) {
                habitData = {};
                saveData();
            }
        }

        function exportData() {
            const dataStr = JSON.stringify(habitData, null, 2);
            const dataBlob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `habit-tracker-${getDateString(new Date())}.json`;
            link.click();
            URL.revokeObjectURL(url);
        }

        function importData(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const imported = JSON.parse(e.target.result);
                    if (confirm('This will replace your current data. Continue?')) {
                        habitData = imported;
                        saveData();
                    }
                } catch (error) {
                    alert('Invalid file format');
                }
            };
            reader.readAsText(file);
        }

        // Initialize on load
        document.addEventListener('DOMContentLoaded', function() {
            updateStats();
            renderHeatmap();
        });
    </script>
</body>
</html>
